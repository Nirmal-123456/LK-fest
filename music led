// Pins
const int soundPin = A0; // Analog output of sound sensor
const int ledPins[] = {3,4,5,6,7,8,9,10};
const int numLEDs = 8;

void setup() {
  for(int i=0; i<numLEDs; i++){
    pinMode(ledPins[i], OUTPUT);
  }
  Serial.begin(9600); // optional for debugging
}

void loop() {
  int soundLevel = analogRead(soundPin); // read sound level
  Serial.println(soundLevel); // see values in serial monitor

  // Map sound level to number of LEDs
  int ledsToLight = map(soundLevel, 0, 1023, 0, numLEDs);

  for(int i=0; i<numLEDs; i++){
    if(i < ledsToLight){
      digitalWrite(ledPins[i], HIGH);
    } else {
      digitalWrite(ledPins[i], LOW);
    }
  }
  delay(50); // smooth response
}
