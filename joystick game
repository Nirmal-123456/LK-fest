#include <Servo.h>

Servo servoX;
Servo servoY;

int joyX = A0;  // Joystick X axis
int joyY = A1;  // Joystick Y axis

int xValue, yValue;
int servoXPos = 90;  // Start at center
int servoYPos = 90;

void setup() {
  Serial.begin(9600);
  servoX.attach(9);   // Servo X on pin 9
  servoY.attach(10);  // Servo Y on pin 10
}

void loop() {
  // Read joystick
  xValue = analogRead(joyX);
  yValue = analogRead(joyY);

  // Map joystick (0–1023) → servo angle (0–180)
  servoXPos = map(xValue, 0, 1023, 0, 180);
  servoYPos = map(yValue, 0, 1023, 0, 180);

  // Move servos
  servoX.write(servoXPos);
  servoY.write(servoYPos);

  delay(15); // smooth movement
}
